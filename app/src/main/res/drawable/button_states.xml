<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1000dp" />
                    <solid android:color="#dedede" />
                    <padding
                        android:bottom="4dp"
                        android:left="4dp"
                        android:right="4dp"
                        android:top="4dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_pressed="false">
        <layer-list>

            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1000dp" />
                    <solid android:color="#b4969696" />
                    <padding
                        android:bottom="4dp"
                        android:left="4dp"
                        android:right="4dp"
                        android:top="4dp" />
                </shape>
            </item>
        </layer-list>

    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="1000dp" />
                    <solid android:color="#b4249929"/>
                    <padding
                        android:bottom="4dp"
                        android:left="4dp"
                        android:right="4dp"
                        android:top="4dp" />
                </shape>
            </item>
        </layer-list>

    </item>

</selector>